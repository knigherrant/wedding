<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
	<name>JK Event</name>
	<author>PHPKungfu! Project</author>
    <creationDate>May 2014</creationDate>
    <copyright>Copyright (C) PHPKungfu. All rights reserved</copyright>
    <license>http://www.gnu.org/licenseses/gpl-2.0.html GNU/GPL or later</license>
    <authorEmail>info@phpkungfu.club</authorEmail>
    <authorUrl>www.phpkungfu.club</authorUrl>
    <version>1.0.0</version>
	<description>JK Event</description>
	<files>
		<filename module="mod_jkevent">mod_jkevent.php</filename>
                <filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
                <folder>assets</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
                                <field name="image" type="media" label="Image" description="Image" />
                                <field name="rsvp" type="text" label="RSVP" description="RSVP" />
                                <field name="key" type="text" label="Google Map Key" description="RGoogle Map KeySVP" default="AIzaSyBGBtfnKJ3Bbn5ITz9L4i1UedivZVRPBJk" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
                         <fieldset name="main" label="Main Ceremony">
				<field name="main_title" type="text"  class="inputbox" label="Main Ceremony"  description="Main Ceremony" />
                                <field name="main_time" type="time"  class="inputbox" label="Time"  description="Time" />
                                <field name="main_address" type="text"  class="inputbox" label="Address"  description="Address" />
                                <field name="main_intro" type="textarea"  class="inputbox" label="Description"  description="Description" />
                                <field name="main_more" type="menuitem"  class="inputbox" label="Link Readmore"  description="Link Readmore" />
                                <field name="main_map" type="text"  class="inputbox" label="Link Open Map"  description="Link Open Map" />
                                
			</fieldset>
                        <fieldset name="party" label="Wedding Party">
				<field name="party_title" type="text"  class="inputbox" label="Wedding Party"  description="Wedding Party" />
                                <field name="party_time" type="time"  class="inputbox" label="Time"  description="Time" />
                                <field name="party_address" type="text"  class="inputbox" label="Address"  description="Address" />
                                <field name="party_intro" type="textarea"  class="inputbox" label="Description"  description="Description" />
                                <field name="party_more" type="menuitem"  class="inputbox" label="Link Readmore"  description="Link Readmore" />
                                <field name="party_map" type="text"  class="inputbox" label="Link Open Map"  description="Link Open Map" />
                                
			</fieldset>
		</fields>
	</config>
</extension>
